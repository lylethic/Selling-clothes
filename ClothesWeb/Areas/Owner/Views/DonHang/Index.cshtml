@model IEnumerable<HoaDon>

@{
  Layout = "";
  Pager pager = new Pager();
  int pageNo = 0;
  if (ViewBag.Pager != null)
  {
    pager = ViewBag.Pager;
    pageNo = pager.CurentPage;
  }
}

<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Modernize Free</title>
  <link rel="shortcut icon" type="image/png" href="~/assets_admin/images/logos/favicon.png" />
  <link rel="stylesheet" href="~/assets_admin/css/styles.min.css" />
  <style>
    body {
      min-height: 100vh;
      background-color: #FFE53B;
      background-image: linear-gradient(147deg, #FFE53B 0%, #FF2525 100%);
    }

    .container-card {
      width: 100%;
      margin: 0 auto;
      text-align: center;
    }
  </style>
</head>

<body>
  @*Body Wrapper*@
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
       data-sidebar-position="fixed" data-header-position="fixed">
    @*Sidebar Start*@
    <aside class="left-sidebar">
      @*Sidebar scroll*@
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-center">
          <a asp-controller="Admin" asp-action="Dashboard" class="text-nowrap logo-img d-flex align-items-center justify-content-between">
            <img src="~/assets_admin/images/logos/favicon.png" alt="" />
            <div class="text-black" style="font-size: 1.5rem; margin-left: 1rem; font-weight: 700; color: rgba(93, 135, 255, 0.85) !important;">Admin</div>
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        @*Sidebar navigation*@
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Home</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="Dashboard" aria-expanded="false">
                <span>
                  <i class="ti ti-layout-dashboard"></i>
                </span>
                <span class="hide-menu">Dashboard</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">SẢN PHẨM</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="AdminProducts" aria-expanded="false">
                <span>
                  <i class="ti ti-article"></i>
                </span>
                <span class="hide-menu">Trang sản phẩm</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">TÀI KHOẢN</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="ListUser" aria-expanded="false">
                <span>
                  <i class="ti ti-user-circle"></i>
                </span>
                <span class="hide-menu">Quản lý tài khoản User</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Đơn hàng</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="DonHang" asp-action="Index" aria-expanded="false">
                <span>
                  <i class="ti ti-shopping-cart"></i>
                </span>
                <span class="hide-menu">Quản lý đơn hàng</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Loại sản phẩm</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="ViewLoaiSanPham" aria-expanded="false">
                <span>
                  <i class="ti ti-clothes-rack"></i>
                </span>
                <span class="hide-menu">Quản lý loại hàng</span>
              </a>
            </li>
          </ul>
        </nav>
        @*End Sidebar navigation*@
      </div>
      @*End Sidebar scroll*@
    </aside>
    @*Sidebar End
      Main wrapper*@
    <div class="body-wrapper">
      @*Header Start*@
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
              <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                <i class="ti ti-menu-2"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                <i class="ti ti-bell-ringing"></i>
                <div class="notification bg-primary rounded-circle"></div>
              </a>
            </li>
          </ul>
          <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
              <li class="nav-item dropdown">
                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                   aria-expanded="false">
                  <img src="~/assets_admin/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                  <div class="message-body">
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-user fs-6"></i>
                      <p class="mb-0 fs-3">My Profile</p>
                    </a>
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-mail fs-6"></i>
                      <p class="mb-0 fs-3">My Account</p>
                    </a>
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-list-check fs-6"></i>
                      <p class="mb-0 fs-3">My Task</p>
                    </a>
                    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                      <button class="dropdown-item btn btn-outline-primary mx-3 mt-2 d-block" type="submit">Logout</button>
                    </form>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      @*Header End*@
      <div class="container container-box">
        <div class="py-5 w-100 container-card">
          <div class="col-lg-10 mt-5">
            <div class="card rounded shadow border-0">
              <div class="card-body p-5 bg-white rounded">
                <div class="table-responsive">
                  <h2>Danh sách đơn hàng</h2>
                  @if (Model.Any())
                  {
                    <table class="table">
                      <thead class="text-center align-middle font-weight-bold">
                        <tr>
                          <td>Id</td>
                          <td>Tên khách hàng</td>
                          <td>Số điện thoại</td>
                          <td>Địa chỉ</td>
                          <td>Trạng thái đơn hàng</td>
                          <td>Ngày đặt hàng</td>
                          <td>Tổng tiền</td>
                          <td>Chức năng</td>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in @Model)
                        {
                          <tr>
                            <td>@item.Id</td>
                            <td class="text-start">@item.Name</td>
                            <td>@item.PhoneNumber</td>
                            <td class="text-start">@item.Address</td>
                            <td>@item.OrderStatus</td>
                            <td>@item.OrderDate</td>
                            <td>@String.Format("{0:0,0}", item.TotalPrice)</td>
                            @if (item.OrderStatus != "Đã xác nhận")
                            {
                              <td class="d-flex flex-column">
                                <a asp-controller="DonHang" asp-action="XacNhan" asp-route-donHangId="@item.Id" class="btn btn-warning text-white mb-2">Xác nhận</a>
                                <a asp-controller="DonHang" asp-action="DonhangDetailsAdmin" asp-route-id="@item.Id" class="btn btn-primary text-white mb-2">Chi tiết</a>
                                <a class="btn btn-danger text-white mb-2" onclick="Xoa('@item.Id', $(this))">Xóa</a>
                              </td>
                            }
                            else
                            {
                          <td class="d-flex flex-column">
                            <p class="btn btn-success text-white mb-2">Đã duyệt</p>
                            <a asp-controller="DonHang" asp-action="DonhangDetailsAdmin" asp-route-id="@item.Id" class="btn btn-primary text-white mb-2">Chi tiết</a>
                            <a class="btn btn-danger text-white mb-2" onclick="Xoa('@item.Id', $(this))">Xóa</a>

                          </td>
                            }
                          </tr>
                        }
                      </tbody>
                    </table>
                  }
                  else
                  {
                    <div class="card">
                      <div class="card-header">
                        Không có đơn hàng
                      </div>
                    </div>
                  }
                  <div class="container">
                    @if (pager.TotalPages > 0)
                    {
                      <ul class="pagination justify-content-center">
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                          <li class="page-item @(pge == pager.CurentPage ? "active" : "")">
                            <a class="page-link" asp-controller="DonHang"
                               asp-action="Index"
                               asp-route-page="@pge">@pge</a>
                            </li>
                          }
                      </ul>
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function Xoa(id, row) {
        // Store the ID of the item to be deleted in a variable
        var itemId = id;

        // Open a confirmation dialog using SweetAlert
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes'
        }).then((result) => {
          if (result.isConfirmed) {
            // If confirmed, send an AJAX request to delete the item
            $.ajax({
              url: `/Owner/DonHang/DonhangDeleteAdmin/${itemId}`,
              type: "POST",
              success: function (data) {
                // Remove the item from the DOM upon successful deletion
                row.closest("tr").remove();
                // Show a success message using SweetAlert
                Swal.fire(
                  'Deleted!',
                  'Your file has been deleted.',
                  'success'
                )
              },
            })
          } else {
            // If cancelled, show a cancellation message using SweetAlert (optional)
            Swal.fire(
              'Cancelled',
              'Your action has been cancelled :)',
              'error'
            )
          }
        });
      }

    </script>

    <script src="~/assets_admin/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets_admin/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets_admin/js/sidebarmenu.js"></script>
    <script src="~/assets_admin/js/app.min.js"></script>
    <script src="~/assets_admin/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/assets_admin/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/assets_admin/js/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>